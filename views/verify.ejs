<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title><%=title%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet"/>

    <style>
        body{
            padding-top: 80px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-search"></span> Verify Token</h1>
        <form action="/users/<%=id%>/verify" method="post">
            <div class="form-group">
                <label>Verification Code: </label>
                <input type="text" class="form-control" name="code">
            </div>

            <button type="submit" class="btn btn-primary">Verify Token</button>
        </form>
        <hr>
        <form action="/users/<%=id%>/resend" method="post">
            <p>Or resend the code.  <button type="submit" class="btn btn-danger">Resend Code</button></p>
        </form>
    </div>
</div>

</body>
</html>